  <script>
    const text = "I'm a digital explorer in the world of search engines and stories.";
    const typedText = document.querySelector('.typed-text');
    let index = 0;

    function type() {
      if (index < text.length) {
        typedText.textContent += text.charAt(index);
        index++;
        setTimeout(type, 50);
      }
    }
    type();
  </script>
